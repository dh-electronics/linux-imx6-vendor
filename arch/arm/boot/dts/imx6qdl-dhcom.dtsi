	tsc2004@49 {							// Touch controller TI TSC2014 (on Board)
		compatible = "ti,tsc2004";
		reg = <0x49>;
		tsc_model =  <2004>;
		interrupt-parent = <&gpio6>;
		interrupts = <28 2>;
		irq-gpios = <&gpio6 28 0>;
		status = "disabled";
	};

