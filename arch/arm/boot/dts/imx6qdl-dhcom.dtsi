&weim {									// Memory interface is not active by default
	status = "disable"; 
};

&iomuxc {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_hog>;

	hog {
		pinctrl_hog: hoggrp {
			fsl,pins = <
				MX6QDL_PAD_NANDF_CS3__GPIO6_IO16  0x80000000	// Card detection for the SD card
				MX6QDL_PAD_SD3_RST__GPIO7_IO08    0x80000000	// Card detection for the Mirco SD card (onBoard)
				MX6QDL_PAD_EIM_D31__GPIO3_IO31    0x80000000	// USB Host 1 Power
				MX6QDL_PAD_RGMII_RD2__GPIO6_IO28  0x80000000	// Touch Interrupt resistive
				MX6QDL_PAD_GPIO_9__WDOG1_B        0x80000000	// Watchdog pin
			>;
		};
	};
};

&ssi1 {									// Used for sound
	fsl,mode = "i2s-slave";
	status = "okay";
};

&uart1 {								// UART 1 (FF)
	pinctrl-names = "default";					// ==> /dev/ttymxc0
	pinctrl-0 = <&pinctrl_uart1_2>;
	fsl,uart-has-rtscts;
	status = "okay";
};

&uart4 {								// UART 3 (STD)
	pinctrl-names = "default";					// ==> /dev/ttymxc3
	pinctrl-0 = <&pinctrl_uart4_2>;
	status = "okay";
};

&uart5 {								// UART 2 (BT)
	pinctrl-names = "default";					// ==> /dev/ttymxc4
	pinctrl-0 = <&pinctrl_uart5_1>;
	fsl,uart-has-rtscts;
	status = "okay";
};

&usbh1 {								// USB Host 1
	vbus-supply = <&reg_usb_h1_vbus>;
	status = "okay";
	dr_mode = "host";
};

&usbotg {								// USB OTG
	vbus-supply = <&reg_usb_otg_vbus>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usbotg_1>;
	disable-over-current;
	status = "okay";
	dr_mode = "otg";						// "host", "peripheral" or "otg" default = "otg"
};

&usdhc2 {								// SD card
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usdhc2_2>;
	cd-gpios = <&gpio6 16 0>;
	fsl,wp-controller;
	keep-power-in-suspend;
	status = "okay";
};

&usdhc3 {								// Mirco SD card (onBoard)
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usdhc3_2>;
	cd-gpios = <&gpio7 8 1>;
	fsl,wp-controller;
	keep-power-in-suspend;
	status = "okay";
};

&usdhc4 {								// eMMC (onBoard)
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usdhc4_1>;
	non-removable;
	bus-width = <8>;
	no-1-8-v;
	keep-power-in-suspend;
	status = "okay";
};

&vpu {
	pu-supply = <&pu_dummy>;					// ldo-bypass:use pu_dummy if VDDSOC share with VDDPU
};
