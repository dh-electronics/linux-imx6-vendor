&pwm1 {									// Used for backlight
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_pwm1_1>;
	status = "okay";
};

&ssi1 {									// Used for sound
	fsl,mode = "i2s-slave";
	status = "okay";
};

&uart1 {								// UART 1 (FF)
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart1_2>;
	fsl,uart-has-rtscts;
	status = "okay";
};

&uart4 {								// UART 3
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart4_2>;
	status = "okay";
};

&uart5 {								// UART 2 (BT)
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart5_1>;
	fsl,uart-has-rtscts;
	status = "okay";
};

&usbh1 {								// USB Host 1
	vbus-supply = <&reg_usb_h1_vbus>;
	status = "okay";
};

&usbotg {								// USB OTG
	vbus-supply = <&reg_usb_otg_vbus>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usbotg_1>;
	disable-over-current;
	status = "okay";
};

&usdhc2 {								// SD card
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usdhc2_2>;
	cd-gpios = <&gpio6 16 0>;
	fsl,wp-controller;
	status = "okay";
};

&usdhc3 {								// Mirco SD card (onBoard)
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usdhc3_2>;
	cd-gpios = <&gpio7 8 1>;
	fsl,wp-controller;
	status = "okay";
};

&usdhc4 {								// eMMC (onBoard)
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usdhc4_1>;
	non-removable;
	bus-width = <8>;
	status = "okay";
};

&vpu {
	pu-supply = <&pu_dummy>;					// ldo-bypass:use pu_dummy if VDDSOC share with VDDPU
};
