	tsc2004@49 {							// Touch controller TI TSC2004
		compatible = "ti,tsc2004";
		reg = <0x49>;
		tsc_model =  <2004>;
		interrupt-parent = <&gpio6>;
		interrupts = <28 2>;
		irq-gpios = <&gpio6 28 0>;
	};
	
	eeprom@50 {							// EEPROM Microchip 24AA02E48T-I/OT
		compatible = "atmel,24c02";
		reg = <0x50>;
		pagesize = <8>;
	};

